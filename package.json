{
  "name": "recipe-application",
  "version": "1.0.1",
  "description": "Application for storing and displaying delicious recipes.",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start.dev": "nodemon",
    "start.all.dev": "concurrently \"nodemon\" \"cd ../recipe-app-gql && nodemon\" \"cd ../recipe-app-ng && ng serve\"",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint --fix 'src/**/*.ts'",
    "lint.probe": "eslint --fix-dry-run 'src/**/*.ts'",
    "preinstall": "rimraf node_modules",
    "postinstall": "npm run build"
  },
  "author": "Ryan Block",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.3",
    "@types/mongoose": "^5.7.4",
    "@types/node": "^13.7.7",
    "@types/node-fetch": "^2.5.5",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "wiredep": "^4.0.0"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "chalk": "^3.0.0",
    "connect-mongo": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-graphql": "^0.9.0",
    "express-session": "^1.16.1",
    "express-validator": "^6.2.0",
    "helmet": "^3.21.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.2.3",
    "mongoose": "^5.7.5",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "12.11.0",
    "npm": "6.13.7"
  }
}
